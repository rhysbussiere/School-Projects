@helper pluralizeChildren(int childCount) {
    @(childCount == 1 ? "Child" : "Children");
}

@{ 
    var childCount = 1;
    <p>I have @childCount  @pluralizeChildren(@childCount)</p>
}

@helper pluralize(int amount, string singular, string plural)
{
    @(amount == 1 ? singular : plural)
}

@{ 
